<tr>
  <td>
    <%= link_to product_path(line_item.product) do %>
      <%= image_tag line_item.product.image.thumb.url, alt: line_item.product.name, class: 'thumbnail' %>
    <% end %>
  </td>
  <td><%= line_item.quantity %></td>
  <td><%= humanized_money_with_symbol(line_item.total_price) %></td>
</tr>